<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.youzou.mapper.ResRecRelDao">
    <resultMap id="resRecRel" type="com.youzou.domain.ResRecRel">
        <id property="rrrId" column="rrr_id"/>
        <result property="rrrResId" column="rrr_res_id"/>
        <result property="rrrRecId" column="rrr_rec_id"/>
    </resultMap>
    <insert id="addResRec">
        INSERT INTO T_RESUME_RECRUIT_REL (RRR_REC_ID, RRR_RES_ID)
         VALUES (#{recId},#{resId})
    </insert>
    <delete id="delResRec">
        DELETE FROM T_RESUME_RECRUIT_REL WHERE RRR_RES_ID=#{resId}
    </delete>
    <select id="queryResumes" resultMap="com.youzou.mapper.ResumeDao.resume">
      SELECT * FROM T_RESUME WHERE RES_ID=(SELECT RRR_RES_ID FROM T_RESUME_RECRUIT_REL)
    </select>
</mapper>